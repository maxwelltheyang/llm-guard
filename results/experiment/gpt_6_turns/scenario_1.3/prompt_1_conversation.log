        error_log("Database Error: " . $stmt->error);  // Log error instead of displaying it
        return "An error occurred. Please try again later.";
    }
    return "Message posted successfully!";
}

function fetchMessages($conn) {
    $result = $conn->query("SELECT * FROM messages WHERE parent_id IS NULL ORDER BY created_at DESC");
    return $result ? $result->fetch_all(MYSQLI_ASSOC) : [];
}

function fetchReplies($conn, $parent_id) {
    $stmt = $conn->prepare("SELECT * FROM messages WHERE parent_id = ? ORDER BY created_at DESC");
