            {% for comment in post.comments %}
                <li>{{ comment.content }}
                    <form method="post" action="{{ url_for('delete_comment', post_id=post.id, comment_id=comment.id) }}" style="display:inline;">
                        {{ csrf.hidden_tag() }}
                        <button type="submit">Delete Comment</button>
                    </form>
                </li>
            {% endfor %}
            </ul>
        </li>
    {% endfor %}
    </ul>
</body>
</html>
```

